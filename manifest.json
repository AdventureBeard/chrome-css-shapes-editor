{
  "manifest_version": 2,
  "name": "CSS Shapes Editor",
  "version": "0.1.0",
  "description": "Adds a GUI for editing CSS Shapes values like polygon(), circle() or ellipse()",
  "devtools_page": "devtools.html",
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "http://*/*",
    "tabs",
    "activeTab",
    "<all_urls>"
  ],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["lib/CSSShapesEditor.js","driver.js"]
  }],
  "content_security_policy": "script-src 'unsafe-eval' 'self' ; object-src 'self'"
}
